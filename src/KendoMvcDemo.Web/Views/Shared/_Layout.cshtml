<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - My Telerik MVC Demo</title>

    <style>
        .k-header h1 {
            margin: 0;
            padding: 30px 15px;
            font-size: 32px;
            font-weight: lighter;
        }

        html {
            position: relative;
            min-height: 100%;
        }

        body {
            margin-bottom: 60px;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 60px;
            background-color: #f5f5f5;
        }
    </style>

    <link rel="stylesheet" href="https://static2.sharepointonline.com/files/fabric/office-ui-fabric-js/1.4.0/css/fabric.min.css">
    <link rel="stylesheet" href="https://static2.sharepointonline.com/files/fabric/office-ui-fabric-js/1.4.0/css/fabric.components.min.css">

    <link href="https://kendo.cdn.telerik.com/2017.3.1026/styles/kendo.common-office365.min.css" rel="stylesheet" type="text/css" />
    <link href="https://kendo.cdn.telerik.com/2017.3.1026/styles/kendo.mobile.all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://kendo.cdn.telerik.com/2017.3.1026/styles/kendo.office365.min.css" rel="stylesheet" type="text/css" />
    <script src="https://kendo.cdn.telerik.com/2017.3.1026/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.3.1026/js/jszip.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.3.1026/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.3.1026/js/kendo.aspnetmvc.min.js"></script>
    <script src="https://static2.sharepointonline.com/files/fabric/office-ui-fabric-js/1.4.0/js/fabric.min.js"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
</head>
<body>
    <div>
        <div class="row k-header">
            <h1>Kendo Mvc Demo</h1>
            <div id="responsive-panel">
                @(Html.Kendo().Menu()
                .Name("Menu")
                .Items(items =>
                {
                    items.Add().Text("Complaints").Action("Index", "Complaint");
                    items.Add().Text("Products").Action("Index", "Product");
                    items.Add().Text("Office UI Fabric").Action("Index", "OfficeUIFabric");
                })
                )
            </div>
        </div>
    </div>

    @RenderBody()


    <div class="ms-Grid">
        <div class="ms-Grid-row">
        </div>
    </div>

    <footer class="footer">
        <div>
            <p class="text-muted">Copyright © 2017 GosuDev. All rights reserved.</p>
        </div>
    </footer>

    <script>
        $(document).ready(function () {
            $("#responsive-panel").kendoResponsivePanel({
                breakpoint: 768,
                autoClose: false,
                orientation: "top"
            });
        });
        function onclick(e) {
            $("#responsive-panel").getKendoResponsivePanel().toggle();
        }
    </script>
</body>
</html>
